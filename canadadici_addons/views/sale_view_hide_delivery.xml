<odoo>

    <record id="sale_form" model="ir.ui.view">
        <field name="name">sale.hide.line.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form/group/group/div/field[@name='product_id']" position="before">
                <!-- <field name="is_delivery_line"/> -->
                <!-- <field name="is_delivery_line" attrs="{'invisible': [('is_delivery_line', '=', False)]}"/> -->
                <attribute name="invisible">[('is_delivery_line', '=', True)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>