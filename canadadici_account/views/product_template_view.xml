<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="list_product_with_img_account" model="ir.ui.view">
        <field name="name">product.list.account.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='name']" position="after">
                <field name="image_1920" widget="image" options="{&quot;size&quot;: [50, 50]}"/>
            </xpath>
        </field>
    </record>
</odoo>