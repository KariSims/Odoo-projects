<odoo>
    <data>
        <!-- SMS views -->
        <record id="view_sms_form" model="ir.ui.view">
            <field name="name">sms.view.form</field>
            <field name="model">dexchange.sms.service</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="to_list" widget="many2many_tags" options="{'no_create': True}"/>
                                <!-- <field name="test_to" /> -->
                            </group>
                        </group>
                        <group>
                            <field name="content" widget="text" />
                        </group>
                        <group>
                            <field name="message_id" />
                            <field name="message_log" />
                            <field name="status" invisible="1" />
                            <button name="retry_sms" string="Retry" type="object" class="btn-primary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sms_wizard" model="ir.ui.view">
            <field name="name">sms.view.wizard</field>
            <field name="model">dexchange.sms.service</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="to_list" widget="many2many_tags" options="{'no_create': True}"
                            />
                        </group>
                    </group>
                    <group>
                        <field name="content" widget="sms_widget" />
                    </group>
                    <footer>
                        <button string="Send" name="send_sms_wizard"
                                type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_sms_list" model="ir.ui.view">
            <field name="name">sms.view.list</field>
            <field name="model">dexchange.sms.service</field>
            <field name="arch" type="xml">
                <list decoration-success="status == 'sent'"
                      decoration-danger="status == 'fail'" default_order="id desc" create="0">
                    <field name="create_uid" string="Sent By" />
                    <field name="to_list" widget="many2many_tags"/>
                    <field name="message_id" />
                    <field name="status" />
                </list>
            </field>
        </record>

        <!-- Menu Actions -->
        <record id="action_sms_wizard" model="ir.actions.act_window">
            <field name="name">SMS_DXCHANGE</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dexchange.sms.service</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sms_wizard" />
            <field name="target">new</field>
        </record>

        <record id="action_sms_view_send" model="ir.actions.act_window">
            <field name="name">SMS Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dexchange.sms.service</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_sms_list" />
        </record>

        <!-- Main Menu SMS -->
        <menuitem id="menu_sms_gateway_main"
                  name="dexchange SMS"
                  sequence="7"
                  action="action_sms_view_send"
                  groups="group_sms_user,group_sms_manager"
        />
        <menuitem id="menu_sms_gateway"
                  name="Messages"
                  parent="menu_sms_gateway_main"
        />
        <menuitem id="menu_sms_gateway_view_new"
                  name="New"
                  parent="menu_sms_gateway"
                  action="action_sms_wizard"
                  sequence="0"
        />
        <menuitem id="menu_sms_gateway_view_sent"
                  name="All Messages"
                  parent="menu_sms_gateway"
                  action="action_sms_view_send"
                  groups="group_sms_user,group_sms_manager"
        />

        <!-- SMS Config Views -->
        <record id="view_sms_config_form" model="ir.ui.view">
            <field name="name">sms.config.form</field>
            <field name="model">dexchange.sms.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Credentials">
                                <field name="url" />
                                <field name="api_key" />
                                <field name="sender" />
                                <!-- <field name="template_id" /> -->
                            </group>
                            <group string="Test Contents">
                                <field name="test_to" />
                                <field name="test_content" />
                                <button name="test_sms" string="Test SMS" type="object"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_sms_config_list" model="ir.ui.view">
            <field name="name">sms.config.list</field>
            <field name="model">dexchange.sms.config</field>
            <field name="arch" type="xml">
                <list>
                    <field name="url" />
                    <field name="sender" />
                </list>
            </field>
        </record>

        <record id="action_sms_config" model="ir.actions.act_window">
            <field name="name">SMS Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dexchange.sms.config</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_sms_gateway_config"
                  name="Configuration"
                  parent="menu_sms_gateway_main"
                  action="action_sms_config"
                  groups="group_sms_manager"
                  sequence="100"
        />
    </data>
</odoo>